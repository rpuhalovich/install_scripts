call git config --global user.email "reanpuhalovich@gmail.com"
call git config --global user.name "Ryan Puhalovich"

call git config --global init.defaultBranch main

call git config --global alias.a "add ."
call git config --global alias.b "branch"
call git config --global alias.bl "blame"
call git config --global alias.c "commit -am"
call git config --global alias.ch "checkout"
call git config --global alias.rclone "clone --recursive"
call git config --global alias.l "log --graph --oneline --decorate"
call git config --global alias.m "merge"
call git config --global alias.r "rebase"
call git config --global alias.s "status"
call git config --global alias.subup "submodule update --init --recursive"
